<launch> 
    <let name="urdf_path"
        value="$(find-pkg-share robot_description)/urdf/humanoid.urdf" />
    <let name="rviz_config_path"
        value="$(find-pkg-share robot_description)/launch/setting.rviz" />

    <!-- for higher robot_state_publisher average rate-->
    <!-- <param name="rate" value="1000"/> -->

    <!-- send fake joint values -->
    <node pkg="robot_state_publisher" exec="robot_state_publisher">
        <param name="robot_description" 
              value="$(command 'xacro $(var urdf_path)')" />
        <param name="publish_frequency" value="1000.0" />
    </node>

    <node pkg="joint_state_publisher_gui" exec="joint_state_publisher_gui">
        <param name="use_gui" value="true"/>
    </node>

    <node pkg="rviz2" exec="rviz2" output="screen" 
        args="-d $(var rviz_config_path)" />

</launch>
